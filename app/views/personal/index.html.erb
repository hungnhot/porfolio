  <!-- content 
    ================================================== -->
    <div id="content">

      <!--====================
        HOME
        ====================-->
      <section class="home wow fadeInLeft animated" id="home">
        <div class="content text-center">
          <h1>Hello ! My name's  <span>Hùng</span></h1>
          <div class="tlt">
            <ul class="texts">
              <li>Ruby on Rails Developer</li>
              <li>Develop &amp; Maintain web application</li>
              <li>Front-end &amp; Back-end Skills</li>
            </ul>
          </div>
        </div>
        <div class="clear"></div>
      </section>
      <!-- End Home -->

      <!-- ====================
        ABOUT-ME
        ====================-->
      <section class="about section section-t wow fadeInRight animated" id="about">
        <!-- <p class="sub-title">Who am i ?</p> -->
        <h3 class="title">Personal Details</h3>   
        <hr/>
        <p align="justify">Hi, I’m a Software Developer with 2<sup>+</sup> years in developing and maintaining Web application using Ruby on Rails and related technologies. I also join in some project using PHP. I would like to use my knowledge gained in the website development cycle and improve myself to becoming full-stack developer
        </p>
        <ul class="list-inline">
          <li><span>Name:</span> <%= @personal_details['name'] %></li>
          <li><span>Email:</span> <a href="mailto:<%= @personal_details['email'] %>"><%= @personal_details['email'] %></a></li>
          <li><span>Phone:</span> <%= @personal_details['phone'] %></li>
          <li><span>Date of birth:</span> <%= @personal_details['birthday'] %></li>
          <li><span>Address:</span> <%= @personal_details['address'] %></li>
          <li><span>Hobbies:</span> <%= @personal_details['hobbies'] %></li>
        </ul>
        <div class="clear"></div>
        <div class="text-center margin-t-40">
          <%= link_to personal_download_resume_path,  class: "btn btn-custom" do %>
            <i class="fa fa-download"></i> Download Resume
          <% end %>
        </div>
      </section>
      <!-- End About-me -->

      <!-- ====================
        Skills 
        ====================-->
      <section class="skills section section-t wow fadeInLeft animated" id="skills">
        <!-- <p class="sub-title">What I'm best at</p> -->
        <h3 class="title">Skills &amp; Knowledge</h3>
        <hr/>
        <div class="row">
          <div class="col-md-6">

            <!-- Skill-1 -->
            <% @skills.each do |skill| %>
              <div class="fixed">
                <div class="progress-bar-description">
                  <%= skill['name'] %>
                  <% val = skill['value'] %>
                  <span style="left: <%= val %>%"><%= val %>%</span>
                </div><!-- end .progress-bar-description -->
                <div class="progress custom-progress">
                  <div class="progress-bar custom-progress-bar progress-custom-color" role="progressbar" aria-valuenow="<%= val %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= val %>%;">
                  </div>
                </div><!-- end .progress-bar -->
              </div>
            <% end %>

          </div><!-- end .col-md-6 -->

          <!-- Knowledge --> 
          <div class="col-md-6">  
            <ul class="check">
              <% @knowledge.each do |k|%>
                <li><%= k['name'] %></li>
              <% end %>
            </ul>            
          </div><!-- end .span3 -->
        </div> <!-- End Row --> 
      </section>
      <!-- End Skills -->

      <!-- ====================
        EXPERIENCE 
        ====================-->
      <section class="experience section section-t wow fadeInRight animated" id="experience">
        <!-- <p class="sub-title">My Background</p> -->
        <h3 class="title">Work Experience</h3>
        <hr/>
        <!-- Experience-Item -->
        <% @work_experience.each_with_index do |work_ex, index| %>
          <% if index == 0 %>
            <div class="row">            
          <% else %>
            <div class="row margin-t-40">
          <% end %>
            <div class="col-md-3 col-sm-4">
              <div class="cv-section-title">
                <h3><span><%= work_ex['start-year'] %><small><%= work_ex['start-month'] %></small></span> -
                    <span><%= work_ex['end-year'] %><small><%= work_ex['end-month'] %></small></span>
                </h3>
                <h4><%= work_ex['company'] %></h4>
              </div>
            </div>
                
            <div class="col-md-9 col-sm-8">
              <div class="cv-item">
                <h4><%= work_ex['position'] %></h4>
                <p>
                  <%= work_ex['description'].html_safe %>
                </p>
              </div><!-- end .cv-item -->
            </div>
          </div><!-- End row -->
        <% end %>        
      </section>
      <!-- End Experience -->

      <!-- ====================
        EDUCATION 
        ====================-->
      <section class="experience education section section-t wow fadeInLeft animated" id="education">
        <!-- <p class="sub-title">My Education</p> -->
        <h3 class="title">Education</h3>
        <hr/>
        <!-- Education-Item -->

        <% @educations.each_with_index do |education, index| %>
          <% if index == 0 %>
            <div class="row">            
          <% else %>
            <div class="row margin-t-40">
          <% end %>
            <div class="col-md-3 col-sm-4">
              <div class="cv-section-title">
                  <h3><span><%= education['start-year'] %><small><%= education['start-month'] %></small></span> -
                      <span><%= education['end-year'] %><small><%= education['end-month'] %></small></span>
                  </h3>
                  <h4><%= education['university'] %></h4>
              </div>
            </div>
            <div class="col-md-9 col-sm-8">
              <div class="cv-item">
                  <h4><%= education['speciality'] %></h4>
                  <p>
                      <%= education['description'].html_safe %>
                  </p>
              </div><!-- end .cv-item -->
            </div>
          </div><!-- End Row --> 
        <% end %>
      </section>
      <!-- End Education -->


      <!-- ====================
        PORTFOLIO 
        ====================-->
      <section class="section section-t" id="portfolio">
        <p class="sub-title">My work</p>
        <h3 class="title">Portfolio</h3>
        <hr/>

        <div class="col-md-12">
          <!--.portfolio-filter-->
          <ul class="portfolio-filters">
            <li class="filter active" data-filter="all">All</li>
            <li class="filter" data-filter="ror">Ruby on Rails</li>
            <li class="filter" data-filter="php">PHP</li>
          </ul><!-- End portfolio-filter-->

          <div id="grid" class="portfolio-items">
            <div class="row">
              <% @projects.each do |project| %>
                <!-- ===== Portfolio Item-1 ===== -->
                <div class="col-sm-4 mix margin-t-20 <%= project['group'] %> effects overlay-effect clearfix">
                  <div class="img">
                    <img src='<%= asset_path( project['link-image'] ) %>' alt="Portfolio Item">
                    <div class="overlay">
                      <button class="md-trigger expand" data-modal="modal-<%= project['id']%>"><i class="fa fa-search"></i><br/>view More</button>
                    </div>
                  </div>
                </div> <!-- item-1 -->
                <!-- Portfolio Item-1 Details -->
                <div class="md-modal md-effect" id="modal-<%= project['id']%>">
                  <div class="md-content">
                    <div class="folio">
                      <div class="port-img margin-t-40">
                        <img src="<%= asset_path( project['link-image'] ) %>" alt="Portfolio-image" class="img-responsive">
                      </div>
                      <div class="sp-name"><strong><%= project['project-title'] %></strong><br><span><%= project['sub-title'] %></span></div>
                      <div class="sp-dsc"><%= project['description'].html_safe %></div>

                      <% unless project['link'].blank? %>
                        <div class="sp-social">
                          <ul>
                            <li><a href="<%= project['link'] %>" target="_blank" class="social-btn"><i class="fa fa-home"></i></a></li>
                          </ul>
                        </div>
                      <% end %>

                      <button class="md-close"><i class="fa fa-times"></i></button>
                    </div>
                  </div>
                </div>
                <div class="md-overlay"></div>
                <!-- /Portfolio Item-1 Details -->
              <% end %>

            </div> <!-- End Row -->
          </div> <!-- End .grid -->
        </div><!--.col-md-12 of portfolio filter-->

      </section>
      <!-- End Portfolio -->


      <!-- ====================
        CONTACT 
        ====================-->
      <section id="contact" class="contact section section-t wow fadeInLeft animated">
        <p class="sub-title">Contact</p>
        <h3 class="title">Hire Me Now</h3>
        <hr/>

        <!-- CONTACT FORM -->
        <div id="cformSuccessMsg" style="display: none;"></div>
        <form id="contactForm" name="contactForm" method="POST" class="margin-t-40">
          <div class="row">
            <div class="col-md-6">
              <!-- Name -->
              <input class="" type="text" name="contact_name" id="contact_name" placeholder="Name" />
              <!-- Email -->
              <input class="" type="text" name="contact_email" id="contact_email" placeholder="Email" />
              <!-- Message -->
              <textarea name="contact_message" id="contact_message" placeholder="Message"></textarea>
              <!-- Submit_Button -->
              <div class="text-right">
                <button class="btn btn-custom" id="contact_submit_btn" name="contact_submit_btn"><span>Say Hello !</span></button>
              </div>
            </div>

            <div class="col-md-6 text-center">
              <div class="pro-img">
                <img class="circle-img" src='<%= asset_path( "img1.jpg" ) %>' alt="team" width="140" height="140"> 
              </div>
              <p><%= @personal_details['phone'] %></p>
              <p><a href="mailto:<%= @personal_details['email'] %>"><%= @personal_details['email'] %></a></p>
            </div>
          </div> <!-- End row -->
        </form><!-- END FORM -->
      </section>
      <!-- end Contact -->


      <!-- ====================
        SOCIAL-SECTION
        ====================-->
      <section class="section social-section wow fadeInRight animated">
        <div class="sp-social text-center">
          <ul>
            <li><i class="fa fa-facebook social-btn fb"></i><br/><a href="https://www.facebook.com/hungnhot45" class="btn btn-social-sub" target="_blank">Visit</a></li>
            <li><i class="fa fa-twitter social-btn twt"></i><br/><a href="https://twitter.com" class="btn btn-social-sub" target="_blank">Visit</a></li>
            <li><i class="fa fa-wordpress social-btn sky"></i><br/><a href="https://www.hungnhotblog.wordpress.com" class="btn btn-social-sub" target="_blank">Visit</a></li>
            <li><i class="fa fa-linkedin social-btn inst"></i><br/><a href="https://www.linkedin.com/in/hungnhot" class="btn btn-social-sub" target="_blank">Visit</a></li>
          </ul>
        </div>
      </section>
      <!-- End Social-section -->


      <!-- ====================
          FOOTER
          ====================-->
      <footer class="footer">
        <p class="copyright">© 2016 Hung Tran-Viet. All rights Reserved.</p>
      </footer>
      <!-- End Footer -->

    </div>
    <!-- End content -->


</div>
